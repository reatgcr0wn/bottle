<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="field col-md-6">
          <%= f.label :email %><br/>
          <%= f.email_field :email, {autofocus: true , class: 'form-control edit-form'}%>
        </div>
      </div>
      <% if f.object.password_required? %>
      <div class="row">
        <div class="field col-md-6">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, {autocomplete: "off" , class: 'form-control edit-form'} %>
        </div>
      </div>
      <div class="row">
        <div class="field col-md-6">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, {autocomplete: "off" , class: 'form-control edit-form'}%>
        </div>
        <% end %>
      </div>
      <div class="row">
        <div class="actions col-md-6">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-block edit-submit'%>
        </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-6">
      <h2>Sign up with Twitter</h2>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to  "Sign up with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary btn-block edit-submit' %><br/>
        <% end -%>
      <% end -%>

    </div>
  </div>

</div>
