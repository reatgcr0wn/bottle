<!DOCTYPE html>
<html>
  <head>
    <title>Bottle</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href='https://fonts.googleapis.com/css?family=Lato:100|League+Script' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'bottle', :root, class: "navbar-brand"%>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <p class="navbar-text navbar-right"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete , class: "navbar-link"%>
            </p>
            <p class="navbar-text navbar-right"><%= link_to 'プロフィール変更', edit_user_registration_path, class: "navbar-link" %></p>
            <p class="navbar-text navbar-right">Signed in as
              <strong><%= link_to current_user.username, home_show_path, class: "navbar-link"%></strong>
            </p>
          <% else %>
            <p class="navbar-text navbar-right"><%= link_to 'サインアップ', new_user_registration_path , class: "navbar-link"%>
            </p>
            <p class="navbar-text navbar-right"><%= link_to 'ログイン', new_user_session_path , class: "navbar-link"%>
            </p>
            <% end %>
          </ul>

        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>

    <%= yield %>
    <% if !notice.nil? %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <%= notice %>
    </div>
    <% end %>
    <% if !alert.nil? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <%= alert %>
    </div>
    <% end %>

    <div class='footer'>
      <div class="container">
        <div class="row">
          <div class="footer-copyright text-center">
            ©bottle All Rights Reserved.
          </div>
        </div>
      </div>

    </body>
  </html>
