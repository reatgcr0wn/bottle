<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail message-card">
        <div class="caption">
          <p class="time"><%= @message.timestamp.to_s(:db) %></p>
          <% if @message.anonymous == false%>
          <p><%= @message.name %></p>
          <% end %>
          <p><%= simple_format(@message.text) %></p>

        </div>
      </div>
    </div>
  </div>
</div>

