<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<!-- <table> -->
  <thead>
    <tr>
      <th>Timestamp</th>
      <th>Anonymous</th>
      <th>Name</th>
      <th>Torn</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
    <tr>
      <td><%= message.timestamp %></td>
      <td><%= message.anonymous %></td>
      <td><%= message.name %></td>
      <td><%= message.torn %></td>
      <td><%= message.text %></td>
      <td><%= link_to 'Show', message %></td>
      <td><%= link_to 'Edit', edit_message_path(message) %></td>
      <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= render 'form' %>
<div id='mainWrap'>
  <h1>Messages</h1>
  <div id='message'>
    <%= render partial: "message", collections: @messages %>
  </div>
</div>
